<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePass">

    <LinearLayout
        android:id="@+id/Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingTop="5dp"
            android:paddingLeft="24dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:layout_marginLeft="24dp"
            android:paddingHorizontal="60dp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forgotpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Change"
        android:layout_marginTop="91dp"
        android:paddingLeft="49dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary_col"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/enteremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a strong password and don't reuse it for other accounts."
            android:fontFamily="@font/poppins"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/forgotpass"
        android:padding="40dp">

        <EditText
            android:id="@+id/pass1"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:background="@drawable/btshape"
            android:backgroundTint="@color/secondary_col"
            android:paddingLeft="23dp"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:hint="Password">

        </EditText>

        <EditText
            android:id="@+id/pass2"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:background="@drawable/btshape"
            android:backgroundTint="@color/secondary_col"
            android:paddingLeft="23dp"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:hint="Confirm Password">

        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="260dp"
        android:height="42dp"
        android:background="@drawable/btshape"
        android:text="Register"
        android:textColor="@color/secondary_col"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textbox"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14dp"/>

</RelativeLayout>