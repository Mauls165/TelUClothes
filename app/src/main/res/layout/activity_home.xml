<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/profile"
        android:fontFamily="@font/poppins"
        android:text="Hallo Username"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile"
        android:layout_marginTop="60dp"
        android:layout_marginStart="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/asrama_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Laundry Member"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| Total: "
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/pointtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="points"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/member"
        android:padding="10dp"
        android:gravity="center">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="372dp"
            android:height="38dp"
            android:hint="Search services"
            android:textColor="@color/grey_font"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:paddingStart="39dp"
            android:background="@drawable/btshape"
            android:backgroundTint="@color/secondary_col"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_marginStart="33dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/search" />

    <TextView
        android:id="@+id/servicetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service"
        android:layout_below="@+id/search"
        android:layout_marginStart="21dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        android:textColor="#38106A"
        android:layout_marginTop="22dp"/>

    <LinearLayout
        android:id="@+id/iklandiskon"
        android:layout_width="374dp"
        android:layout_height="122dp"
        android:layout_below="@+id/servicetxt"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#38106A"
        android:background="@drawable/btshape">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            app:srcCompat="@drawable/diskonpic"/>

        <LinearLayout
            android:id="@+id/diskon40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/diskon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40%"
                    android:textSize="24sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="36dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="OFF"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First order"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingHorizontal="40dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="98dp"
                android:layout_height="23dp"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:background="@drawable/btshape"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="2dp"
                android:text="Order Now" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/Lastorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Order"
        android:layout_below="@+id/iklandiskon"
        android:layout_marginStart="21dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        android:textColor="#38106A"
        android:layout_marginTop="24dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/Lastorder">

    </androidx.recyclerview.widget.RecyclerView>
    <ImageView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/plus" />

    <ImageView
        android:id="@+id/bottommenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/bottommenu" />

    <ImageView
        android:id="@+id/homemenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="29dp"
        app:srcCompat="@drawable/homemenu" />

    <ImageView
        android:id="@+id/searchmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/searchmenu" />

    <ImageView
        android:id="@+id/billmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="279dp"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/bill" />

    <ImageView
        android:id="@+id/settingmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="357dp"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/setting" />

</RelativeLayout>