<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".order_list">

    <LinearLayout
        android:id="@+id/orderlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingTop="5dp"
            android:paddingLeft="24dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order List"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:layout_marginLeft="24dp"
            android:paddingHorizontal="100dp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/orderlist">

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="72dp"
            android:background="@drawable/outlinebtn"
            android:backgroundTint="#F3F3F3"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="18dp">

            <ImageView
                android:id="@+id/imgtshirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tshirt"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameitem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="tshirt"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/harga1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="13sp"
                    android:textColor="@color/primary_col"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="87dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minTshirt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/deleteitem"/>

                <TextView
                    android:id="@+id/totalItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/plusTshirt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/additem"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="72dp"
            android:background="@drawable/outlinebtn"
            android:backgroundTint="#F3F3F3"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="18dp">

            <ImageView
                android:id="@+id/imgshirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shirt"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameitem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="shirt"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/harga2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="13sp"
                    android:textColor="@color/primary_col"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minshirt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/deleteitem"/>

                <TextView
                    android:id="@+id/totalItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/plusshirt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/additem"/>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="72dp"
            android:background="@drawable/outlinebtn"
            android:backgroundTint="#F3F3F3"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="18dp">

            <ImageView
                android:id="@+id/imgsleeveless"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:src="@drawable/sleeveless" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameitem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="sleeveless"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/harga3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="13sp"
                    android:textColor="@color/primary_col"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minsleevelesst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/deleteitem"/>

                <TextView
                    android:id="@+id/totalItem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/plussleeveless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/additem"/>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="72dp"
            android:background="@drawable/outlinebtn"
            android:backgroundTint="#F3F3F3"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="18dp">

            <ImageView
                android:id="@+id/imgrok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rok"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameitem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Skirt"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/harga4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="13sp"
                    android:textColor="@color/primary_col"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="99dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minrok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/deleteitem"/>

                <TextView
                    android:id="@+id/totalItem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/plusrok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/additem"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="72dp"
            android:background="@drawable/outlinebtn"
            android:backgroundTint="#F3F3F3"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="18dp">

            <ImageView
                android:id="@+id/imgpolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/polo"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namePolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="polo"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hargaPolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="13sp"
                    android:textColor="@color/primary_col"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minPolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/deleteitem"/>

                <TextView
                    android:id="@+id/totalPolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/plusPolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlinebtn"
                    android:src="@drawable/additem"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item"/>

    <ImageView
        android:id="@+id/addtochartbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:src="@drawable/addtochart" />

</RelativeLayout>