<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingTop="5dp"
            android:paddingLeft="24dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:layout_marginLeft="24dp"
            android:paddingHorizontal="100dp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/creatakun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_marginTop="91dp"
        android:paddingLeft="49dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a New Account"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary_col"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account so you can manage your personal finances"
            android:fontFamily="@font/poppins"
            android:textColor="@color/grey_font"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/creatakun"
        android:padding="40dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:background="@drawable/btshape"
            android:backgroundTint="@color/secondary_col"
            android:paddingLeft="23dp"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:hint="Enter your email"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:background="@drawable/btshape"
            android:backgroundTint="@color/secondary_col"
            android:layout_marginTop="17dp"
            android:paddingLeft="23dp"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:hint="User Name"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:background="@drawable/btshape"
            android:backgroundTint="@color/secondary_col"
            android:layout_marginTop="17dp"
            android:paddingLeft="23dp"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:hint="Password"/>

        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="322dp"
            android:layout_height="42dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/btshape"
            android:backgroundTint="@color/secondary_col"
            android:fontFamily="@font/poppins"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="23dp"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="260dp"
        android:height="42dp"
        android:background="@drawable/btshape"
        android:text="Register"
        android:textColor="@color/secondary_col"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textbox"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/registerbutton"
        android:layout_marginTop="56dp"
        android:textColor="@color/grey_font"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:text="You can also sign up with"
        android:id="@+id/youcan"/>

    <ImageView
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/youcan"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/openid_google" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/google"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/dontvae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:textColor="@color/grey_font"
            android:text="Already have an account?"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Login Now"
            android:textColor="@color/primary_col"
            android:layout_marginLeft="5dp"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>